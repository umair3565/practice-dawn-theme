<style>

  .products-pagination {
    margin-top: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
  }

  .pagination-number,
  .pagination-arrow,
  .pagination-ellipsis {
    text-decoration: none;
    transition: all 0.25s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    padding: 8px 16px;
    font-family: Inter;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    text-align: center;
    border: 1px solid transparent;
  }

  .pagination-number.active,
  .pagination-number:hover {
    background-color: #000;
    color: #fff;
    border-color: #000;
  }

  .pagination-arrow.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .pagination-arrow.disabled svg path {
    stroke: #b9b9b9;
  }

  .pagination-ellipsis {
    color: #999;
    cursor: default;
  }

  @media (max-width: 600px) {
    .products-pagination {
      gap: 4px;
    }

    .pagination-number,
    .pagination-arrow,
    .pagination-ellipsis {
      width: 28px;
      height: 28px;
      padding: 4px 10px;
      font-size: 14px;
      line-height: 20px;
    }
  }
</style>

{% if paginate.pages > 1 %}
  {% assign current_page = paginate.current_page %}
  {% assign total_pages = paginate.pages %}


  <div class="products-pagination">
    {%- if paginate.previous -%}
      <a href="{{ paginate.previous.url }}" class="pagination-arrow prev">
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M6.75 0.75L0.75 6.75L6.75 12.75"
            stroke="#1C1C1C"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </a>
    {%- else -%}
      <span class="pagination-arrow prev disabled">
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M6.75 0.75L0.75 6.75L6.75 12.75"
            stroke="#999999"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </span>
    {%- endif -%}

    {% if current_page == 1 %}
      <span class="pagination-number active">1</span>
    {% else %}
      <a href="{{ paginate.parts.first.url }}" class="pagination-number">1</a>
    {% endif %}


    {% if current_page > 3 %}
      <span class="pagination-ellipsis">...</span>
    {% endif %}


    {% for i in (2..total_pages) %}
      {% if i == total_pages %}
        {% break %}{% endif %}

      {% assign min_range = current_page | minus: 1 %}
      {% assign max_range = current_page | plus: 1 %}


      {% if i >= min_range %}
        {% if i <= max_range %}

          {% if i == current_page %}
            <span class="pagination-number active">{{ i }}</span>
          {% else %}
            {% for part in paginate.parts %}
              {% assign part_num = part.title | plus: 0 %}
              {% if part_num == i %}
                <a href="{{ part.url }}" class="pagination-number">{{ i }}</a>
                {% break %}
              {% endif %}
            {% endfor %}
          {% endif %}

        {% endif %}
      {% endif %}

    {% endfor %}


    {% assign pages_from_end = total_pages | minus: current_page %}
    {% if pages_from_end > 2 %}
      <span class="pagination-ellipsis">...</span>
    {% endif %}

    {% if total_pages > 1 %}
      {% if current_page == total_pages %}
        <span class="pagination-number active">{{ total_pages }}</span>
      {% else %}
        <a href="{{ paginate.parts.last.url }}" class="pagination-number">{{ total_pages }}</a>
      {% endif %}
    {% endif %}

    {%- if paginate.next -%}
      <a href="{{ paginate.next.url }}" class="pagination-arrow next">
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M0.75 0.75L6.75 6.75L0.75 12.75"
            stroke="#1C1C1C"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </a>
    {%- else -%}
      <span class="pagination-arrow next disabled">
        <svg
          width="8"
          height="14"
          viewBox="0 0 8 14"
          fill="none"
          xmlns="http://www.w3.org/2000/svg">
          <path
            d="M0.75 0.75L6.75 6.75L0.75 12.75"
            stroke="#999999"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </span>
    {%- endif -%}
  </div>


{% endif %}