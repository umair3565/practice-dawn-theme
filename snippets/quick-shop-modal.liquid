<style>
  .quick-shop-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .quick-shop-modal.active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Modal wrapper */
  .quick-shop-wrapper {
    max-width: 60vw;
    max-height: 70vh;
    width: 60vw;
    height: 70vh;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    overflow: hidden;
    transform: scale(0.9);
    transition: transform 0.3s ease;
  }

  .quick-shop-modal.active .quick-shop-wrapper {
    transform: scale(1);
  }

  /* Close button */
  .quick-shop-close {
    position: absolute;
    top: 10px;
    right: 12px;
    font-size: 22px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 10;
  }

  /* Modal container */
  .shop-modal-container {
    display: flex;
    flex: 1;
    height: 100%;
  }

  /* Left column */
  .shop-modal-left {
    width: 40%;
    height: 100%;
    overflow-y: auto;
    padding: 20px;
    box-sizing: border-box;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .shop-modal-left::-webkit-scrollbar {
    display: none;
  }

  .shop-modal-left .shop-modal-left-img,
  .shop-modal-left .shop-modal-left-thumbs {
    max-width: 360px;
    max-height: 300px;
    border-radius: 8px;
    object-fit: cover;
  }

  /* Right column - flex column layout */
  .shop-modal-right {
    width: 60%;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* pushes quantity/cart to bottom */
    height: 100%;
  }

  /* Stock info */
  .shop-modal-container .shop-modal-products-stock {
    display: inline-flex;
    gap: 8px;
    align-items: center;
  }

  .shop-modal-products-stock .modal-stock-icon.sold circle {
    fill: #333333;
    stroke: #bababa;
  }

  .modal-stock-icon circle {
    transition: fill 0.2s ease
    , stroke 0.2s ease;
  }

  .shop-modal-products-stock .modal-stock-text {
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    color: #00A52F;
  }

  .price-container {
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .modal-price-container p {
    font-weight: 500;
    font-size: 18px;
    line-height: 26px;
    color: var(--text-secondary);
  }

  .modal-compare-price {
    font-weight: 300;
    text-decoration: line-through;
    color: #bababa;
    font-size: 16px;
  }

  /* Variant options */
  .modal-product-variant-option-name {
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
  }

  .modal-product-option-values {
    margin-top: 8px;
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .modal-product-variant-box {
    padding: 8px 16px;
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
    color: var(--text-secondary);
    border: 1px solid #B9B9B9;
    cursor: pointer;
    transition: all 0.12s ease;
  }

  .modal-product-variant-box:hover {
    border-color: #0b0b0b;
  }

  .modal-product-variant-box.selected {
    background: var(--text-secondary);
    color: var(--text-primary);
    border-color: var(--text-secondary);
  }

  /* Quantity + Add to Cart */
  .modal-quantity-cartBtn {
    margin-top: 20px;
    /* gap from product info */
    padding-bottom: 10px;
    /* space from bottom */
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .modal-qunatity-control {
    display: flex;
    align-items: center;
    border: 1px solid #B9B9B9;
    overflow: hidden;
    height: 48px;
    min-width: 130px;
  }

  .modal-qunatity-control button {
    width: 40px;
    text-align: center;
    font-size: 18px;
    user-select: none;
    cursor: pointer;
  }

  .modal-qunatity-control input {
    width: 40px;
    text-align: center;
    font-size: 16px;
    border: none;
    outline: none;
    box-shadow: none;
  }

  .modal-cart-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 48px;
    border: none;
    background: var(--text-secondary);
    color: var(--text-primary);
    padding: 0 18px;
    cursor: pointer;
    transition: background 0.12s ease;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
  }

  .modal-cart-btn:hover {
    background: #222;
  }

  .modal-cart-btn .modal-cart-btn-left {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .modal-cart-btn p {
    margin: 0;
  }
</style>

