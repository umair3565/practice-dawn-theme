<div id="quickShopModal" class="quick-shop-modal">
  <div class="quick-shop-wrapper">
    <button class="quick-shop-close" type="button">×</button>
    <div class="shop-modal-container">

      <!-- Left Column -->
      <div class="shop-modal-left">
        <img
          class="shop-modal-left-img"
          width="100%"
          height="100%"
          src=""
          alt="">

        <div class="shop-modal-left-thumbs" style="display: none;">
        </div>
      </div>

      <!-- Right Column -->
      <div class="shop-modal-right">
        <!-- First div: all product info -->
        <div class="modal-info">
          <h3 class="modal-product-title">Loading...</h3>
          <div class="shop-modal-products-stock">
            <svg
              width="16"
              height="16"
              viewBox="0 0 16 16"
              fill="none"
              class="modal-stock-icon"
              xmlns="http://www.w3.org/2000/svg">
              <circle
                cx="8"
                cy="8"
                r="6"
                fill="#00A52F"
                stroke="#C5F5D2"
                stroke-width="4" />
            </svg>
            <span class="modal-stock-text">Available in stock (0)</span>
          </div>

          <div class="modal-price-container">
            <p class="modal-sale-price">$0.00</p>
            <p style="color: #bababa; display: none;" class="modal-compare-price">$0.00</p>
