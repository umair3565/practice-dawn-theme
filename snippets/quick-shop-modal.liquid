<style>
  .quick-shop-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .quick-shop-modal.active {
    opacity: 1;
    pointer-events: auto;
  }

  /* Modal wrapper - simplified smaller size */
  .quick-shop-wrapper {
    max-width: 500px;
    width: 90%;
    background: #fff;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    transform: scale(0.9);
    transition: transform 0.3s ease;
    padding: 30px;
  }

  .quick-shop-modal.active .quick-shop-wrapper {
    transform: scale(1);
  }

  /* Close button */
  .quick-shop-close {
    position: absolute;
    top: 15px;
    right: 15px;
    font-size: 28px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 10;
    color: #333;
    line-height: 1;
    padding: 0;
    width: 30px;
    height: 30px;
  }

  .quick-shop-close:hover {
    color: #000;
  }

  /* Modal content - centered layout */
  .quick-shop-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .quick-shop-image {
    max-width: 360px;
    width: 100%;
    height: 360px;
    border-radius: 8px;
    object-fit: cover;
    margin-bottom: 20px;
  }

  .quick-shop-title {
    font-size: 22px;
    font-weight: 600;
    color: var(--text-secondary, #333);
  }

  .quick-shop-price-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 25px;
  }

  .quick-shop-price {
    font-size: 24px;
    font-weight: 600;
    color: var(--text-secondary, #333);
    margin: 0;
  }

  .quick-shop-compare-price {
    font-size: 20px;
    font-weight: 400;
    text-decoration: line-through;
    color: #999;
    margin: 0;
  }

  .quick-shop-btn {
    width: 100%;
    max-width: 300px;
    padding: 15px 30px;
    background: var(--text-secondary, #333);
    color: var(--text-primary, #fff);
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
    text-decoration: none;
    display: inline-block;
  }

  .quick-shop-btn:hover {
    background: #222;
  }

  @media (max-width: 768px) {
    .quick-shop-wrapper {
      padding: 20px;
    }

    .quick-shop-title {
      font-size: 18px;
    }

    .quick-shop-price {
      font-size: 20px;
    }

    .quick-shop-compare-price {
      font-size: 18px;
    }
  }
</style>

<div id="quickShopModal" class="quick-shop-modal">
  <div class="quick-shop-wrapper">
    <button class="quick-shop-close" type="button">×</button>

    <div class="quick-shop-content">
      <img
        class="quick-shop-image"
        width="300"
        height="300"
        src=""
        alt="">

      <h3 class="quick-shop-title">Loading...</h3>

      <div class="quick-shop-price-container">
        <p class="quick-shop-price">0.00</p>
        <p class="quick-shop-compare-price" style="display: none;">0.00</p>
      </div>

      <a
        href="#"
        class="quick-shop-btn"
        id="quickShopNowBtn">Shop Now</a>
    </div>
  </div>
</div>

<script>
  // Global function to open quick shop modal with product data
  window.openQuickShopModal = async function(productHandle) {
    const quickShopModal = document.getElementById('quickShopModal');
    if (!quickShopModal) return;
  
    try {
      // Fetch product data from Shopify
      const response = await fetch(`/products/${productHandle}.js`);
      const product = await response.json();
      
      // Populate modal with basic product data
      populateQuickShopModal(product);
      
      // Show modal
      quickShopModal.classList.add('active');
    } catch (error) {
      console.error('Error fetching product:', error);
      if (window.showToast) {
        showToast('❌ Failed to load product details');
      }
    }
  };
  
  // Function to populate modal with basic product data
  function populateQuickShopModal(product) {
    const modal = document.getElementById('quickShopModal');
    if (!modal) return;
  
    const selectedVariant = product.variants[0];
  
    // Update image
    const imageElem = modal.querySelector('.quick-shop-image');
    if (imageElem && product.featured_image) {
      imageElem.src = product.featured_image;
      imageElem.alt = product.title;
    }
  
    // Update title
    const titleElem = modal.querySelector('.quick-shop-title');
    if (titleElem) {
      titleElem.textContent = product.title;
    }
  
    // Update price
    const priceElem = modal.querySelector('.quick-shop-price');
    if (priceElem && selectedVariant) {
      priceElem.textContent = (selectedVariant.price / 100).toFixed(2);
    }
  
    // Update compare price
    const comparePriceElem = modal.querySelector('.quick-shop-compare-price');
    if (comparePriceElem && selectedVariant) {
      if (selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price) {
        comparePriceElem.textContent = (selectedVariant.compare_at_price / 100).toFixed(2);
        comparePriceElem.style.display = 'block';
      } else {
        comparePriceElem.style.display = 'none';
      }
    }
  
    // Update Shop Now button link
    const shopNowBtn = modal.querySelector('#quickShopNowBtn');
    if (shopNowBtn) {
      shopNowBtn.href = `/products/${product.handle}`;
    }
  }
  
  document.addEventListener('click', (e) => {
  const quickShopModal = document.getElementById('quickShopModal');
  if (!quickShopModal) return;
  
  const closeBtn = e.target.closest('.quick-shop-close');
  const wrapper = quickShopModal.querySelector('.quick-shop-wrapper');
  
  // CLOSE VIA X BUTTON
  if (closeBtn) {
    quickShopModal.classList.remove('active');
    return;
  }
  
  // CLOSE WHEN CLICKING OUTSIDE MODAL
  if (wrapper && !wrapper.contains(e.target)) {
    quickShopModal.classList.remove('active');
  }
  });
</script>