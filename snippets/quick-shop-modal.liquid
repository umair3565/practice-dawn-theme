              type="number"
              id="modalDisplayQuantity"
              value="1"
              min="1">
            <button id="modalIncrementBtn">+</button>
          </div>

          <button class="modal-cart-btn" id="modalAddToCartBtn">
            <div class="modal-cart-btn-left">
              <img
                width="16px"
                height="16px"
                src="{{ 'shopping-bag.svg' | asset_url }}"
                alt="cart">
              <span class="modal-cart-text">Add to Bag</span>
            </div>
            <p class="modal-sale-price-cart">$0.00</p>
          </button>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  // Global function to open quick shop modal with product data
  window.openQuickShopModal = async function(productHandle) {
    const quickShopModal = document.getElementById('quickShopModal');
    if (!quickShopModal) return;

    try {
      // Fetch product data from Shopify
      const response = await fetch(`/products/${productHandle}.js`);
      const product = await response.json();
      
      // Populate modal with product data
      populateQuickShopModal(product);
      
      // Show modal
      quickShopModal.classList.add('active');
    } catch (error) {
      console.error('Error fetching product:', error);
      if (window.showToast) {
        showToast('❌ Failed to load product details');
      }
    }
  };

  // Function to populate modal with product data
  function populateQuickShopModal(product) {
    const modal = document.getElementById('quickShopModal');
    if (!modal) return;

    // Get selected variant (first available)
    const selectedVariant = product.variants[0];
    let currentVariantId = selectedVariant.id;

    // Update main image
    const mainImg = modal.querySelector('.shop-modal-left-img');
    if (mainImg && product.featured_image) {
      mainImg.src = product.featured_image;
      mainImg.alt = product.title;
    }

    // Update title
    const titleElem = modal.querySelector('.modal-product-title');
    if (titleElem) {
      titleElem.textContent = product.title;
    }

    // Update stock status
    const stockText = modal.querySelector('.modal-stock-text');
    const stockIcon = modal.querySelector('.modal-stock-icon circle');
    if (stockText && selectedVariant) {
      const qty = selectedVariant.inventory_quantity || 0;
      const available = selectedVariant.available;
      
      if (available && qty > 0) {
        stockText.textContent = `Available in stock (${qty})`;
        if (stockIcon) {
          stockIcon.setAttribute('fill', '#00A52F');
          stockIcon.setAttribute('stroke', '#C5F5D2');
        }
      } else {
        stockText.textContent = 'Out of stock';
        if (stockIcon) {
          stockIcon.setAttribute('fill', '#333333');
          stockIcon.setAttribute('stroke', '#bababa');
        }
      }
    }

    // Update price
    const priceElem = modal.querySelector('.modal-sale-price');
    const comparePriceElem = modal.querySelector('.modal-compare-price');
    if (priceElem && selectedVariant) {
      priceElem.textContent = formatMoney(selectedVariant.price);
      
      if (comparePriceElem) {
        if (selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price) {
          comparePriceElem.textContent = formatMoney(selectedVariant.compare_at_price);
          comparePriceElem.style.display = 'block';
        } else {
          comparePriceElem.style.display = 'none';
        }
      }
    }

    // Update cart button price
    const cartPriceElem = modal.querySelector('.modal-sale-price-cart');
    if (cartPriceElem && selectedVariant) {
      cartPriceElem.textContent = formatMoney(selectedVariant.price);
    }

    // Update description
    const descElem = modal.querySelector('.modal-description');
    if (descElem && product.description) {
      descElem.innerHTML = truncateWords(product.description, 50);
    }

    // Handle variant options
    const variantsContainer = modal.querySelector('.modal-variants-container');
    if (variantsContainer && product.options && product.options.length > 0) {
      variantsContainer.innerHTML = '';
      
      product.options.forEach((option, optionIndex) => {
        const optionDiv = document.createElement('div');
        optionDiv.className = 'modal-product-variant-option';
        optionDiv.dataset.optionIndex = optionIndex;
        
        const optionTitle = document.createElement('h4');
        optionTitle.className = 'modal-product-variant-option-name';
        optionTitle.textContent = option;
        
        const valuesDiv = document.createElement('div');
        valuesDiv.className = 'modal-product-option-values';
        
        // Get unique values for this option
        const values = [...new Set(product.variants.map(v => v.options[optionIndex]))];
        
        values.forEach((value, valueIndex) => {
          // Find a variant with this option value
          const matchingVariant = product.variants.find(v => v.options[optionIndex] === value);
          
          const button = document.createElement('button');
          button.className = 'modal-product-variant-box';
          if (valueIndex === 0) button.classList.add('selected');
          button.dataset.variantId = matchingVariant?.id || '';
          button.dataset.optionName = option;
          button.dataset.optionValue = value;
          button.textContent = value;
          
          // Handle variant image if available
          if (matchingVariant && matchingVariant.featured_image) {
            button.dataset.variantImg = matchingVariant.featured_image.src;
          }
          
          valuesDiv.appendChild(button);
        });
        
        optionDiv.appendChild(optionTitle);
        optionDiv.appendChild(valuesDiv);
        variantsContainer.appendChild(optionDiv);
      });
      
      // Add variant click handlers
      setupVariantHandlers(product, currentVariantId);
    }

    // Setup quantity controls
    setupQuantityControls();
    
    // Setup add to cart
    setupModalAddToCart(product, currentVariantId);
  }

  // Setup variant selection handlers
  function setupVariantHandlers(product, currentVariantId) {
    const modal = document.getElementById('quickShopModal');
    const variantBoxes = modal.querySelectorAll('.modal-product-variant-box');
    const mainImg = modal.querySelector('.shop-modal-left-img');
    const priceElem = modal.querySelector('.modal-sale-price');
    const comparePriceElem = modal.querySelector('.modal-compare-price');
    const cartPriceElem = modal.querySelector('.modal-sale-price-cart');
    const stockText = modal.querySelector('.modal-stock-text');
    const stockIcon = modal.querySelector('.modal-stock-icon circle');

    variantBoxes.forEach(box => {
      box.addEventListener('click', () => {
        // Remove selected from siblings
        box.parentElement.querySelectorAll('.modal-product-variant-box').forEach(b => {
          b.classList.remove('selected');
        });
        box.classList.add('selected');

        // Get selected options
        const selectedOptions = {};
        modal.querySelectorAll('.modal-product-variant-option').forEach(optionDiv => {
          const selectedBox = optionDiv.querySelector('.modal-product-variant-box.selected');
          if (selectedBox) {
            const optionName = selectedBox.dataset.optionName;
            const optionValue = selectedBox.dataset.optionValue;
            selectedOptions[optionName] = optionValue;
          }
        });

        // Find matching variant
        const matchingVariant = product.variants.find(variant => {
          return Object.entries(selectedOptions).every(([optionName, optionValue]) => {
            const optionIndex = product.options.indexOf(optionName);
            return variant.options[optionIndex] === optionValue;
          });
        });

        if (matchingVariant) {
          currentVariantId = matchingVariant.id;

          // Update image
          if (box.dataset.variantImg && mainImg) {
            mainImg.src = box.dataset.variantImg;
          }

          // Update price
          if (priceElem) {
            priceElem.textContent = formatMoney(matchingVariant.price);
          }
          if (cartPriceElem) {
            cartPriceElem.textContent = formatMoney(matchingVariant.price);
          }

          // Update compare price
          if (comparePriceElem) {
            if (matchingVariant.compare_at_price && matchingVariant.compare_at_price > matchingVariant.price) {
              comparePriceElem.textContent = formatMoney(matchingVariant.compare_at_price);
              comparePriceElem.style.display = 'block';
            } else {
              comparePriceElem.style.display = 'none';
            }
          }

          // Update stock
          if (stockText) {
            const qty = matchingVariant.inventory_quantity || 0;
            const available = matchingVariant.available;
            
            if (available && qty > 0) {
              stockText.textContent = `Available in stock (${qty})`;
              if (stockIcon) {
                stockIcon.setAttribute('fill', '#00A52F');
                stockIcon.setAttribute('stroke', '#C5F5D2');
              }
            } else {
              stockText.textContent = 'Out of stock';
              if (stockIcon) {
                stockIcon.setAttribute('fill', '#333333');
                stockIcon.setAttribute('stroke', '#bababa');
              }
            }
          }

          // Update the add to cart button's variant ID
          const addToCartBtn = modal.querySelector('#modalAddToCartBtn');
          if (addToCartBtn) {
            addToCartBtn.dataset.variantId = currentVariantId;
          }
        }
      });
    });
  }

  // Setup quantity controls
  function setupQuantityControls() {
    const modal = document.getElementById('quickShopModal');
    const incrementBtn = modal.querySelector('#modalIncrementBtn');
    const decrementBtn = modal.querySelector('#modalDecrementBtn');
    const quantityInput = modal.querySelector('#modalDisplayQuantity');

    if (incrementBtn && quantityInput) {
      incrementBtn.addEventListener('click', (e) => {
        e.preventDefault();
        quantityInput.value = parseInt(quantityInput.value) + 1;
      });
    }

    if (decrementBtn && quantityInput) {
      decrementBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const currentValue = parseInt(quantityInput.value);
        if (currentValue > 1) {
          quantityInput.value = currentValue - 1;
        }
      });
    }
  }

  // Setup add to cart functionality
  function setupModalAddToCart(product, initialVariantId) {
    const modal = document.getElementById('quickShopModal');
    const addToCartBtn = modal.querySelector('#modalAddToCartBtn');
    const quantityInput = modal.querySelector('#modalDisplayQuantity');

    if (addToCartBtn) {
      // Store initial variant ID
      addToCartBtn.dataset.variantId = initialVariantId;

      // Remove old listeners by cloning
      const newBtn = addToCartBtn.cloneNode(true);
      addToCartBtn.parentNode.replaceChild(newBtn, addToCartBtn);

      newBtn.addEventListener('click', async (e) => {
        e.preventDefault();
        
        const variantId = newBtn.dataset.variantId;
        const quantity = parseInt(quantityInput.value) || 1;

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              Accept: 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: quantity,
            }),
          });

          const data = await response.json();
          if (response.ok) {
            // Close modal
            modal.classList.remove('active');
            
            // Open cart drawer if available
            if (window.openCartDrawer) window.openCartDrawer();
            
            // Update cart count
            if (window.updateCartCount) updateCartCount();
            
            // Show success message
            if (window.showToast) {
              showToast('✅ Product added to cart!');
            }
          } else {
            if (window.showToast) {
              showToast(`❌ Error: ${data.message || 'Unable to add to cart'}`);
            }
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
          if (window.showToast) {
            showToast('❌ Something went wrong, please try again.');
          }
        }
      });
    }
  }

  // Helper function to format money
  function formatMoney(cents) {
    return '$' + (cents / 100).toFixed(2);
  }

  // Helper function to truncate words
  function truncateWords(text, wordCount) {
    const words = text.split(' ');
    if (words.length > wordCount) {
      return words.slice(0, wordCount).join(' ') + '...';
    }
    return text;
  }

  // Function to initialize Quick Shop modal close handlers
  function initQuickShopModal() {
    const quickShopModal = document.getElementById('quickShopModal');
    if (!quickShopModal) return;
  
    const quickShopWrapper = quickShopModal.querySelector('.quick-shop-wrapper');
    const quickShopCloseBtn = quickShopModal.querySelector('.quick-shop-close');
  
    // CLOSE VIA X BUTTON
    if (quickShopCloseBtn) {
      quickShopCloseBtn.addEventListener('click', () => {
        quickShopModal.classList.remove('active');
      });
    }
  
    // CLOSE WHEN CLICKING OUTSIDE MODAL
    quickShopModal.addEventListener('click', (event) => {
      if (!quickShopWrapper.contains(event.target)) {
        quickShopModal.classList.remove('active');
      }
    });
  }
  
  // Call once on DOM load
  document.addEventListener('DOMContentLoaded', () => {
    initQuickShopModal();
  });
</script>