{% schema %}
  {
    "name": "Blogs Banner",
    "settings": [],
    "presets": [
      {
        "name": "Blogs Banner"
      }
    ]
  }
{% endschema %}

<style>
  .blog-banner {
    position: relative;
    height: 650px;
    overflow: hidden;
  }

  .blog-banner-bg img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    z-index: 1;
  }

  .banner-container {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .banner-card {
    background-color: white;
    padding: 50px 40px;
    max-width: 600px;
    width: 100%;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    border-radius: 12px;
  }

  .banner-card p {
    margin-top: 20px;
    font-size: 16px;
    line-height: 24px;
    color: #555;
  }

  @media (max-width: 768px) {
    .banner-card {
      padding: 30px 20px;
    }

    .banner-card h2 {
      font-size: 28px;
    }

    .banner-card p {
      font-size: 14px;
      line-height: 20px;
    }
  }
</style>

<section class="blog-banner">
  <div class="blog-banner-bg">
    <img
      width="100%"
      height="100%"
      src="{{ 'blogs-bg.jpg' | asset_url }}"
      alt="Blogs Banner">
  </div>

  <div class="banner-container">
    <div class="banner-card">
      <h2 class="main-heading">Our Latest Stories</h2>
      <p>Stay updated with the latest news, insights, and tips from our blog.</p>
    </div>
  </div>
</section>